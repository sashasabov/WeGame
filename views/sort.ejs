<head>
<link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&family=Indie+Flower&family=Philosopher&family=Space+Mono&family=Special+Elite&display=swap" rel="stylesheet">
      
    <style>
    body {
      font-family: 'Fredericka the Great', cursive;
    }
    </style>
    </head>

<body>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/games">
            <img src="https://i.imgur.com/IAkyflz.jpg" alt="" width="30" height="24" class="d-inline-block align-text-top">
            WeGame
          </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
         
          <li class="nav-item">
            <a class="nav-link" href="/games">Home</a>
          </li>
        </ul>
            <a href="/games/logout"><button class="btn btn-outline-success">Logout</button></a>
        </div>
    </div>
  </nav>  


  <div class="album py-5 bg-light" > 
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% game.forEach((el)=>{%>
                <div class="col" > 
                   <div class="card shadow-sm">
                        <img src="<%= el.img %>" alt="image" class="bd-placeholder-img card-img-top" width="100%" height="225" >
                    <div style="text-align: center;margin: 1rem;"><h2><%= el.title %> </h2></div>
                    <div class="card-body">
                      <p class="card-text"> <b>Description: </b><%= el.description %></p>
                      <p class="card-text"></p><b>Age: </b> <%= el.age %> </p>
                      <p class="card-text"><b>Number of players: </b><%= el.players %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <form action="/games/<%= el.id %>/edit">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </form> 
                            <a href="/games/<%= el.id %>" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                        <form action="/games/<%= el.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">DELETE</button>
                        </form>
                      </div>
                      </div>
                    </div>  
                  </div>
                  <%}) %> 
                </div>
            </div>
        </div>
    </div>
</body>
      