<div class="container"  style="text-align: center;"><h1>Welcome <%= locals.user.name %>!</h1></div>

  <div class="album py-5 bg-light" >
     <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
             <% game.forEach((el)=>{%>
              <div class="col">
              <div class="card shadow-sm">
                      <img src="<%= el.img %>" alt="image" class="bd-placeholder-img card-img-top" width="100%" height="225" >
                  <div style="text-align: center;margin: 1rem;"><h2><%= el.title %> </h2></div>
                    
                 <div class="card-body">
                    <p class="card-text"> <u>Description: </u><%= el.description %></p>
                    <p class="card-text"></p><u>Age: </u> <%= el.age %> </p>
                   <p class="card-text"><u>Number of players: </u><%= el.players %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                       <form action="/games/<%= el.id %>/edit">
                         <button type="submit" class="btn btn-sm btn-outline-secondary">Edit</button>
                       </form> 
                           <a href="/games/<%= el.id %>" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                      </div>
                  <form action="/games/<%= el.id %>?_method=DELETE" method="POST">
                     <button type="submit" class="btn btn-sm btn-outline-secondary">DELETE</button>
                 </form>
             </div>
          </div>
         </div>
      </div>
       <%}) %> 
       </div>
  </div>
