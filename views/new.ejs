    <h1>New Game</h1>
    <form action="/games/" method="POST">
        <ul style="list-style-type: none;">
            <li>
                <label for="title">Name: </label>
                <input type="text" name="title">
            </li><br>
            <li>
                <label for="img">Image: </label>
                <input type="text" name="img">
