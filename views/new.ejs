                <input type="checkbox" name="category[]" value="kids">
                <label for="category">Adults</label>
                <input type="checkbox" name="category[]" value="adults">
                <label for="category">Indoor</label>
                <input type="checkbox" name="category[]" value="indoor">
                <label for="category">Outdoor</label>
                <input type="checkbox" name="category[]" value="outdoor">
            </p>
            </li><br>
        </ul>
        <button type="submit">SUBMIT</button>
    </form>
